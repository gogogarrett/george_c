<div id="slideshow">
  <% @galleries.each_with_index do |gallery, index| %>
    <ul class="gallery <%= gallery.title%>" data-title="<%= gallery.title %>">
      <% gallery.images.each_with_index do |image, index| %>
        <li data-image-id="<%= index %>" class='image'>
          <%= image_fu image %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<ul id="galleries">
  <% @galleries.each do |gallery| %>
    <li>
      <i class="arrow"></i>
      <%= link_to gallery.title, "#", data: { title: gallery.title }, class: 'gallery_title' %>
    </li>
  <% end %>
</ul>
