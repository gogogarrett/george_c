<% content_for :body_content_title do %>
  <%= @process.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @process.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @process.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @process.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="processes">
      <% @processes.each do |process| %>
        <li>
          <%= link_to process.title, refinery.processes_process_path(process) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
